{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "background": "#0077c2",
                    "foreground": "#ffffff",
                    "leading_diamond": "\ue0b6",
                    "style": "diamond",
                    "template": " {{ .Name }} ",
                    "type": "os"
                },
                {
                    "background": "#ff479c",
                    "foreground": "#ffffff",
                    "powerline_symbol": "\ue0b0",
                    "style": "powerline",
                    "template": " \ue5fe {{ .Path }} ",
                    "type": "path"
                },
                {
                    "background": "#fffb38",
                    "foreground": "#193549",
                    "powerline_symbol": "\ue0b0",
                    "style": "powerline",
                    "template": " \ue725 {{ .HEAD }} ",
                    "type": "git"
                },
                {
                    "background": "#6CA35E",
                    "foreground": "#ffffff",
                    "powerline_symbol": "\ue0b0",
                    "style": "powerline",
                    "template": " \ue235 {{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }} ",
                    "type": "python"
                },
                {
                    "background": "#f3f3f3",
                    "foreground": "#193549",
                    "powerline_symbol": "\ue0b0",
                    "style": "powerline",
                    "template": " \uf00c ",
                    "type": "exit"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 2
}