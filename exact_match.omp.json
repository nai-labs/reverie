{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none",
            "style": "folder"
          },
          "leading_diamond": "\ue0b6",
          "template": " \uf07c {{ .Path }} ",
          "foreground": "#ffffff",
          "background": "#0077c2",
          "type": "path",
          "style": "diamond"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " on ",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "background": "#2e9599",
          "type": "text",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " \ue725 {{ .HEAD }} ",
          "foreground": "#2e3440",
          "powerline_symbol": "\ue0b0",
          "background": "#a3be8c",
          "type": "git",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none",
            "display_mode": "always",
            "fetch_virtual_env": true
          },
          "template": " \ue235 {{ if .Venv }}{{ .Venv }} {{ else }}{{ .Full }} {{ end }}",
          "foreground": "#2e3440",
          "powerline_symbol": "\ue0b0",
          "background": "#ebcb8b",
          "type": "python",
          "style": "powerline"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " ",
          "foreground": "#ffffff",
          "powerline_symbol": "\u2593\u2592\u2591",
          "background": "#a3be8c",
          "type": "text",
          "style": "powerline"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
            "always_enabled": false,
            "cache_duration": "none",
            "display_exit_code": false
          },
          "template": " \uf00d Error ",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b2",
          "background": "#bf616a",
          "type": "exit",
          "style": "powerline",
          "invert_powerline": true
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " \uf252 {{ .ExecutionTime }} ",
          "foreground": "#2e3440",
          "powerline_symbol": "\ue0b2",
          "background": "#ebcb8b",
          "type": "executiontime",
          "style": "powerline",
          "invert_powerline": true
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " \uf017 {{ .CurrentDate | date \"15:04:05\" }} ",
          "foreground": "#2e3440",
          "powerline_symbol": "\ue0b2",
          "background": "#81a1c1",
          "type": "time",
          "style": "powerline",
          "invert_powerline": true
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}